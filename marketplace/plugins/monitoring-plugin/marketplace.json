{
  "name": "bs9-monitoring-plugin",
  "version": "1.0.0",
  "description": "Advanced monitoring and metrics plugin for BS9 with Prometheus integration, alerting, and comprehensive system monitoring",
  "author": "BS9 Community",
  "license": "MIT",
  "category": "core-extensions",
  "keywords": ["bs9", "monitoring", "metrics", "prometheus", "performance", "alerting"],
  "repository": "https://github.com/xarhang/bs9-marketplace",
  "homepage": "https://github.com/xarhang/bs9-marketplace/tree/main/plugins/monitoring-plugin",
  "main": "src/index.js",
  "type": "module",
  "dependencies": {
    "bs9-core": "^1.3.0",
    "prom-client": "^14.2.0",
    "systeminformation": "^5.21.0"
  },
  "devDependencies": {
    "bun": "^1.0.0",
    "@types/node": "^20.0.0"
  },
  "bs9": {
    "version": ">=1.3.0",
    "commands": [
      {
        "name": "monitor",
        "description": "Advanced monitoring commands",
        "usage": "bs9 monitor [options]",
        "examples": [
          "bs9 monitor status",
          "bs9 monitor start",
          "bs9 monitor config"
        ]
      },
      {
        "name": "metrics",
        "description": "Metrics collection and analysis",
        "usage": "bs9 metrics [options]",
        "examples": [
          "bs9 metrics show",
          "bs9 metrics export prometheus",
          "bs9 metrics reset"
        ]
      }
    ],
    "hooks": [
      "service:start",
      "service:stop",
      "service:restart",
      "service:status"
    ],
    "permissions": [
      "service:read",
      "service:write",
      "system:read"
    ],
    "configuration": {
      "interval": {
        "type": "number",
        "default": 30000,
        "description": "Metrics collection interval in milliseconds"
      },
      "enabledMetrics": {
        "type": "array",
        "default": ["cpu", "memory", "disk", "network"],
        "description": "Enabled system metrics"
      },
      "prometheus": {
        "type": "object",
        "default": {
          "enabled": true,
          "port": 9090
        },
        "description": "Prometheus server configuration"
      },
      "alerts": {
        "type": "object",
        "default": {
          "enabled": true,
          "thresholds": {
            "cpu": 80,
            "memory": 85,
            "disk": 90
          }
        },
        "description": "Alert configuration"
      }
    }
  },
  "features": [
    "Real-time metrics collection",
    "Prometheus integration",
    "System monitoring (CPU, Memory, Disk, Network)",
    "Service monitoring",
    "Alerting system",
    "Configurable metrics",
    "REST API for metrics",
    "Historical data tracking",
    "Performance analysis",
    "Resource usage tracking"
  ],
  "compatibility": {
    "bs9": ">=1.3.0",
    "bun": ">=1.0.0",
    "node": ">=18.0.0",
    "platforms": ["linux", "darwin", "win32"]
  },
  "installation": {
    "methods": [
      "bs9 marketplace install bs9-monitoring-plugin",
      "npm install bs9-monitoring-plugin",
      "bun install bs9-monitoring-plugin"
    ]
  },
  "documentation": {
    "readme": "https://github.com/xarhang/bs9-marketplace/blob/main/plugins/monitoring-plugin/README.md",
    "api": "https://github.com/xarhang/bs9-marketplace/blob/main/plugins/monitoring-plugin/API.md",
    "examples": "https://github.com/xarhang/bs9-marketplace/tree/main/plugins/monitoring-plugin/examples"
  },
  "support": {
    "issues": "https://github.com/xarhang/bs9-marketplace/issues",
    "discord": "https://discord.gg/bs9",
    "email": "support@bs9.dev"
  },
